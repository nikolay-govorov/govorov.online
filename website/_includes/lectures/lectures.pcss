.lectures {
  max-width: 854px;
}

.lectures__frame-container {
  --aspect-ratio: 315 / 560;

  position: relative;

  display: flex;
  align-items: stretch;
  justify-content: stretch;

  width: 100%;
  padding-top: calc(100% * var(--aspect-ratio));

  &:before {
    display: block;
    content: "";
    width: 100%;
  }
}

.lectures__frame {
  position: absolute;

  top: 0;
  bottom: 0;
  left: 0;
  right: 0;

  width: 100%;
  height: 100%;
}
